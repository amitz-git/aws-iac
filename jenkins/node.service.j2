[Unit]
Description=Jenkins Agent
After=network.target

[Service]
User=jenkins
WorkingDirectory=/home/jenkins
ExecStart=/usr/bin/java -jar /home/jenkins/agent.jar -url http://{{ groups['master'][0] }}:8080/ -secret @/tmp/slave-secret.txt -name {{ item }} -workDir /home/jenkins
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
